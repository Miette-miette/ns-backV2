{% extends 'base.html.twig' %}

{% block title %}Modifier mes informations{% endblock %}

{% block body %}
    <main class="pages">
        {% for message in app.flashes('warning')%}
            <div class="alert alert-warning">
                {{message}}
            </div>
        {% endfor %}

        <div class="container align-items-center w-75 p-2">
            <a href="{{ app.request.headers.get('referer') ?: 'http://127.0.0.1:3000/home' }}" class="link-orange h5">
                ← Revenir à la page précédente
            </a>
        </div>
            
        <div class="container wrapper-beige align-items-center w-75">

            <div class="d-flex flex-row justify-content-center align-items-center">
                <img src="/media/icons/happyfleur1.png" class="decoTitreShake"/>
                <h1>Modififier mes informations</h1>
                <img src="/media/icons/happyfleur1.png" class="decoTitreShake"/>
            </div>
            
            {{form(form)}}
        </div>
    </main>
        
{% endblock %}
